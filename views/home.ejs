<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home page</title>
</head>
<body>

    <%- include('./partials/Navbar') %>
    <div class="main-container">
    <!-- <%= JSON.stringify(blogs) %> -->
        <div class="container mt-5">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <% blogs.forEach(blog => { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <% if (blog.coverImageUrl) { %>
                                <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="Cover" style="max-height:180px; object-fit:cover;">
                            <% } %>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= blog.title %></h5>
                                <p class="card-text text-muted mb-2">By <%= blog.createdBy.fullName %></p>
                                <a href="/blogs/<%= blog._id %>" class="btn btn-outline-primary mt-auto">Read More</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
        <%- include('./partials/script') %>
        <%- include('./partials/footer') %>
</body>
</html>