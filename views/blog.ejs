<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home page</title>
</head>
<body>

    <%- include('./partials/Navbar') %>
    <div class="main-container">
        <div class="container my-4">
            <div class="card shadow-sm">
                <% if (blog.coverImageUrl) { %>
                    <img src="<%= blog.coverImageUrl %>" alt="Cover" class="card-img-top" style="max-height:350px; object-fit:cover;">
                <% } %>
                <div class="card-body">
                    <h1 class="card-title mb-3"><%= blog.title %></h1>
                    <div class="d-flex align-items-center mb-3">
                        <img src="<%= blog.createdBy.profileImageUrl %>" alt="" width="50" class="rounded-circle me-2 border">
                        <span class="fw-semibold"><%= blog.createdBy.fullName %></span>
                    </div>
                    <p class="card-text" style="white-space:pre-line;"><%= blog.body %></p>
                </div>
            </div>
        </div>

        <div class="container mt-5">
            <h3 class="mb-4">Comments <span class="badge bg-secondary"><%= comments.length %></span></h3>
            <% if(locals.user){ %>
                <form action="/blogs/comment/<%= blog._id %>" method="POST" class="mb-4">
                    <div class="mb-3">
                        <label for="commentBody" class="form-label">Add a Comment</label>
                        <input type="text" name="content" class="form-control" id="commentBody" placeholder="Write your comment..." />
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm">Add comment</button>
                </form>
            <% } %>
            <div class="mt-3">
                <% comments.forEach(comment => { %>
                    <div class="card mb-3 p-2 ps-3 border-0 bg-light ">
                        <div class="d-flex align-items-center mb-1">
                            <img src="<%= comment.createdBy.profileImageUrl %>" alt="Profile" width="36" class="rounded-circle me-2 border">
                            <span class="fw-semibold"><%= comment.createdBy.fullName %></span>
                        </div>
                        <div class="ps-5">
                            <span><%= comment.content %></span>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
            </div>
        <%- include('./partials/script') %>
        <%- include('./partials/footer') %>
    </body>
    </html>